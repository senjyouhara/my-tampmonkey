{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@packages": ["packages/*"]
    }
  },
  "include": [
    "./global.d.ts", "packages/**/*.tsx", "packages/**/*.ts"],
  "exclude": ["node_modules", "lib", "es", "dist"]
}
